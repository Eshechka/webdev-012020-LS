include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Личный сайт разработчика
  body
    .wrapper
      .maincontent
        .maincontent__absoluteblock
          header.header
            .container
              .header__container
                .header__logo
                  +logotype("ВА")

                .header__menu
                  -
                    const itemsMenu = [
                      {href: "./change-me", text: "Главная", modifier: "active"}, 
                      {href: "./change-me", text: "Обо мне"}, 
                      {href: "./change-me", text: "Навыки"}, 
                      {href: "./change-me", text: "Работы"}, 
                      {href: "./change-me", text: "Отзывы"}, 
                      {href: "./change-me", text: "Связаться"},
                    ]

                  +menu(itemsMenu)

                .header__social
                  -
                    const itemsSocial = [
                      {url: 'https://www.instagram.com', text: 'insta', modifier: 'insta'}, 
                      {url: 'https://www.vk.com', text: 'vk', modifier: 'vk'}, 
                      {url: 'https://www.github.com', text: 'github', modifier: 'github'}
                    ]

                  +socials(itemsSocial)

        .wrapper-sections.wrapper-sections_group1
              
          section.fullscreen-section.greeting
            //- .greeting__absolute-block.greeting__absolute-block_top
            .container
              .greeting__absolute-block.greeting__absolute-block_center
                +main-title('Личный сайт','веб-разработчика','Владимир Астаханов')

              .greeting__absolute-block.greeting__absolute-block_bottom
                div.scroll
                  div.scroll__block Скролл
                

          section.about-me
            .container

              .about-me__container
 
                .about-me__block.about-me__block_left
                  .about-me__avatar
                    +avatar('content/user.jpg')

                  - 
                    const itemsAboutMe = [
                      {key: 'Проживаю:', value: 'Новосибирск'},
                      {key: 'Возраст:', value: '29 лет'},
                      {key: 'Родилась:', value: '1 января 1991'},
                    ]

                  .about-me__table
                    +table(itemsAboutMe)


                .about-me__block.about-me__block_right
                  .about-me__text.about-me__text_bottom18 Привет, меня зовут
                  .about-me__name 
                    h2 Владимир Астаханов
                  .about-me__text.about-me__text_bottom91 Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                  .about-me__text.about-me__text_italic Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!


        +svg-triangles("outside")


        .wrapper-sections.wrapper-sections_group2

          section.whatican
            .container
              .whatican__container
                div.whatican__block.whatican__block_left
              
                div.whatican__block.whatican__block_right
                
                  h3.whatican__title Чем я могу быть полезен вам
                  div.whatican__text 
                    p Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!

                  .skills
                    h4.skills__title Front-end
                    ul.skills__list
                    - 
                      const itemsSkillsFront = [
                        {skill: 'HTML5', degree: 270},
                        {skill: 'CSS3', degree: 250},
                        {skill: 'Javascript', degree: 40},
                        {skill: 'JQuery и Vue.js', degree: 10},
                      ]
                    each item in itemsSkillsFront
                      li.skills__item                   
                          +progress(item.skill, item.degree)


                    h4.skills__title Workflow
                    ul.skills__list
                    - 
                      const itemsSkillsWork = [
                        {skill: 'Git', degree: 180},
                        {skill: 'Terminal', degree: 190},
                        {skill: 'Gulp', degree: 20},
                        {skill: 'Webpack', degree: 100},
                      ]
                    each item in itemsSkillsWork
                      li.skills__item                   
                          +progress(item.skill, item.degree)
                

          section.myworks
            .container
              h3.myworks__title Мои работы
              .myworks__container
                .myworks__block
                  .slider
                    .slider__slides
                      .slider__preview
                        +image('content/sliderpicture.png', 'slider__picture')
                      .slider__miniatures
                        ul.slider__mini-list
                          li.slider__mini-item
                            +image('content/sliderpicture.png', 'slider__mini-picture')
                          li.slider__mini-item
                            +image('content/sliderpicture2.png', 'slider__mini-picture')
                          li.slider__mini-item.slider__mini-item.slider__mini-item_active
                            +image('content/sliderpicture3.png', 'slider__mini-picture')
                      .slider__arrows
                        +arrows('arrow-down', '', true)
                    
                    .slider__decs
                      .slider__tags
                        ul.slider__tags-list
                          li.slider__tags-item HTML
                          li.slider__tags-item CSS
                          li.slider__tags-item JavaScript

                      .slider__title Сайт школы образования
                      .slider__text Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 2 месяца только самых тяжелых испытаний и бессонных ночей!
                      .slider__wrap-link
                        a.slider__link(href='./changeme') Посмотреть сайт


        +svg-triangles("inside")


        .wrapper-sections.wrapper-sections_group3
          section.reviews
            .container
              .reviews__topgroup
                h3.reviews__title Что обо мне говорят
                .reviews__navigation
                  +arrows('arrow-down', 'white_circles', false)

              .reviews__container
                +review('Ковальчук Дмитрий', 'Основатель Loftschool', 'content/review_authot1.png', 'Этот парень проходил обучение веб-разработке не где-то, а в LoftSchool! 4,5 месяца только самых тяжелых испытаний и бессонных ночей!')
                +review('Владимир Сабанцев', 'Преподватель', 'content/review_authot2.png', 'Этот код выдержит любые испытания. Только пожалуйста, не загружайте сайт на слишком старых браузерах')
            
 
          section.contacts
            .container
              h3.reviews__title Связаться со мной


        footer.footer
          .container
            .footer__container
              .footer__left-block
                .footer__copyright © 2019

                .footer__main-title
                  //-сменил фамилию :)))
                  .footer__name Владимир Астахов 
                  .footer__profession Личный сайт веб&#8209разработчика

              .footer__right-block
                .footer__menu
                  +menu(itemsMenu, 'dark_theme')
                .footer__info
                  .footer__info-block
                    .footer__text Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                    .footer__socials
                      +socials(itemsSocial, 'dark_theme')

                  .footer__info-block
                    .footer__quote Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                    .footer__author Martin Golding



        //-+image('content/user.jpg', 'user-pic')
        //-+icon('link', 'link-class')
