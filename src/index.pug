include ./mixins.pug

<!DOCTYPE html>
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Личный сайт разработчика
  body
    .wrapper
      .maincontent
        .wrapper-sections.wrapper-sections_group1
          section.fullscreen-section.greeting
            .container
              .greeting__block.greeting__block_top
                header.header
                  .header__logo
                    +logotype("ЛГ")

                  .header__menu
                    -
                      const menuItems = [
                        {href: "./change-me", text: "Главная", modifier: "active"}, 
                        {href: "./change-me", text: "Обо мне"}, 
                        {href: "./change-me", text: "Навыки"}, 
                        {href: "./change-me", text: "Работы"}, 
                        {href: "./change-me", text: "Отзывы"}, 
                        {href: "./change-me", text: "Связаться"}
                      ]

                    +menu(menuItems)


                  .header__social
                    -
                      const socialItems = [
                        {url: 'https://www.instagram.com', text: 'insta', modifier: 'insta'}, 
                        {url: 'https://www.vk.com', text: 'vk', modifier: 'vk'}, 
                        {url: 'https://www.github.com', text: 'github', modifier: 'github'}
                      ]

                    +socials(socialItems)

              +main-title('Личный сайт','веб-разработчика','Лидия Годоражи')

              .greeting__block.greeting__block_bottom
                div.scroll
                  div.scroll__block скролл
                


          section.fullscreen-section.about-me
            .container

              .person
                .person__info
                  .person__avatar
                    .avatar
                      +image('content/user.jpg', 'avatar__picture')

                  .person__data
                  
                  - 
                    const personData = [
                      {key: 'Проживаю:', value: 'Москва'},
                      {key: 'Возраст:', value: '36 лет'},
                      {key: 'Родилась:', value: '21 сентября 1983'},
                    ]

                  .person__table
                    +table(personData)
                      

                .person__desc
                  .person__text.person__text_bottom18 Привет, меня зовут
                  .person__name 
                    h2 Лидия Годоражи
                  .person__text.person__text_bottom91 Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                  .person__text.person__text_italic Этот сайт я сделала в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!

        +svg-triangles("outside")

        .wrapper-sections.wrapper-sections_group2

          section.fullscreen-section.whatican
            .container
              .whatican__block
                h3.whatican__title Чем я могу быть полезен вам
                div.whatican__text 
                  h3 Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
                  .skills
                    h4.skills__title Frontend
                    ul.skills__list
                      li.skills__item
                        .progress
                          svg.progress__svg(preserveAspectRatio="none" viewBox="0 0 150 150")
                            linearGradient#gradient
                              stop(offset="0%" stop-color="#9300e8")
                              stop(offset="100%" stop-color="#4a00ed")
                            circle(cx=75 cy=75 r=65 fill="none" stroke="#e9e9e9" stroke-width="10")
                            circle(cx=75 cy=75 r=65 fill="none" stroke="url(#gradient)" stroke-width="20" stroke-dasharray="270 360")
                          div.progress__text HTML5

                      li.skills__item CSS3
                      li.skills__item Javascript
                      li.skills__item JQuery и Vue.js

                    h4.skills__title Workflow
                    ul.skills__list
                      li.skills__item Git
                      li.skills__item Terminal
                      li.skills__item Gulp
                      li.skills__item Webpack
                

          section.fullscreen-section.myworks
            .container
              h3.myworks__title Мои работы

        +svg-triangles("inside")

        .wrapper-sections.wrapper-sections_group3
          section.fullscreen-section.reviews
            .container
              h3.reviews__title Что обо мне говорят
 
          section.fullscreen-section.contacts
            .container

        footer.footer
          .container
            


