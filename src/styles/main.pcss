@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800');
@import "normalize.css";
@import "./mixins.pcss";
@import "./layout/base.pcss";
@import './blocks/*.pcss';

.maincontent {
	position: relative;
	
	&__header {
		position: absolute;
		right: 0;
		left: 0;
		top: 0;
		z-index: 5;
	}	
	&__popup-menu {
		position: fixed;
		top: 0;
		right: 0;
		bottom: 0;
		z-index: 100;
		opacity: 0.9999;
		height: 100vh;
	}

}

.header {

	&__container {
		display: flex;
		justify-content: space-between;
		align-items: center;
		min-height: 105px;
		padding-top: 14px;
	}

	&__menu {
		padding: 50px 30px 0;

		@include desktop {
			padding-right: 4px;
			padding-left: 4px;
		}
		@include tablets {
			display: none;
		}
	}

	&__hamburger {
		display: none;

		@include tablets {
			display: block;
		}
	}

	&__logo {
		

		@include tablets {
			flex-basis: 30%;
		}
	}

}

section {
	// min-height: 100vh;
}

.wrapper-sections {
	
	&_group1 {
		position: relative;

		@include tablets {
			background-image: url("../images/content/Mountain_Baloon.jpg");
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		  }
	}
	
	&_group2 {
		
	}
	
	&_group3 {
		background-image: url("../images/content/Budda.jpg");
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
}

.greeting {

	position: relative;

  &__absolute-block {

	  position: absolute;
	  right: 0;
	  left: 0;

	&_center {
		top: 50%;
		transform: translateY(-50%);
		max-height: 50%;
		overflow: hidden;
		padding-bottom: 120px;
	}

	&_bottom {
		bottom: 0;
	}
  }
}

.about-me {
	// padding-bottom: 120px;
	padding-bottom: 260px;

	&__container {
		display: flex;
		justify-content: center;
		// padding-bottom: 132px;
	}

	&__block {
		
		&_left {
			display: flex;
			flex-direction: column;
			align-items: center;
			width: 26%;
			min-width: 380px;

			@include tablets {
				min-width: 220px;
				width: 40%;
				align-items: flex-start;
			}
		}
		
		&_right {
			padding-left: 60px;
			max-width: 43%;

			@include tablets {
				padding-left: 45px;
				max-width: 415px;
			}
		}

	}

	&__avatar {
		display: flex;
		width: 200px;
		height: 200px;
		border-radius: 50%;
		overflow: hidden;
		margin-bottom: 60px;
	}

	&__table {
		width: 100%;
	}

	&__name {
		
		margin-bottom: 29px;

		& h2 {
			color: $base-color;
			font-weight: 800;
			font-size: 36px;
			line-height: 48px;
		}

		@include tablets {
			font-size: 30px;
		}
		
	}

	&__text {		
		color: $color-light;		
		font-weight: 600;
		font-size: 16px;
		line-height: 30px;

		&_hello {
			margin-bottom: 14px;
		}
		&_occupation {
			margin-bottom: 91px;
		}

		&_italic {
			font-style: italic;
			position: relative;

			&::after {
				content: '*';
				position: absolute;
				top: 0;
				left: -60px;
				color: rgba(#db0200, 0.1);
				font-size: 48px;
				line-height: 1;
			}
		}

		@include tablets {
			font-size: 14px;
			line-height: 24px;
		}

	}
}

.whatican {
	padding-top: 150px;

	&__container {
		display: flex;

		@include tablets {
			justify-content: center;
			flex-direction: column-reverse;
		}
	}

	&__picture {
		background-image: url(../images/content/backpack.png);
		background-repeat: no-repeat;
		background-size: contain;
		background-position: right center;
		width: 40%;

		@include tablets {
			width: 100%;
			height: 300px;
			background-position: center;
		}
	}

	&__skills {
		display: inline-flex;
		flex-direction: column;
		width: 79%;

		@include tablets {
			width: 100%;
		}
	}


	
	&__title {
		font-weight: bold;
		font-size: 30px;
		line-height: 36px;
		margin-bottom: 47px;

		@include tablets {
			text-align: center;
		}
	}

	&__text {
		font-size: 16px;
		line-height: 30px;
		margin-bottom: 81px;
		width: 60%;

		@include tablets {
			font-weight: 600;
			font-size: 14px;
			line-height: 24px;
			text-align: center;
			width: 100%;
		}
	}

	&__skills {
		margin-left: 127px;

		@include tablets {
			margin-left: 0;
		}
	}
}

.myworks {

	padding-top: 123px;
	padding-bottom: 170px;

	&__title {
		color: $base-color;
		font-size: 36px;
		line-height: 48px;
		font-weight: bold;
		margin-bottom: 90px;
		}

	@include tablets {
		padding-bottom: 0px;
	}
}

.reviews {

	padding-top: 253px;

	&__topgroup {
		display: flex;
		align-items: center;
		margin-bottom: 80px;
	}

	&__title {
		min-width: 400px;
		color: $base-color;
		font-size: 36px;
		line-height: 48px;
		font-weight: bold;		
		margin-right: 80px;

		@include tablets {
			margin-right: 30px;
			font-size: 30px;
			min-width: 0px;
		}
	}
	
	&__navigation {
		display: inline-flex;
	}

	&__container {
		display: flex;
		width: calc(450px * 2 + 58px * 2 + 25px);
		overflow: hidden;
		padding: 9px 0;

		padding-left: 25px;

		@include desktop {
			width: calc(450px * 2 + 40px * 2 + 25px);
		}
		@include tablets {
			padding-left: 0;
			width: calc(300Px * 2 + 20px * 2);
		}
	}
	
}

.contacts {

	padding-top: 185px;
    padding-bottom: 100px;

	&__title {
		color: $base-color;
		font-size: 36px;
		line-height: 48px;
		font-weight: bold;
		margin-bottom: 78px;

			@include tablets {
				font-size: 30px;
				text-align: center;
			}
		}
	
}

.footer {
	min-height: 405px;
	background-color: $color-dark;
	padding: 95px 0;
	color: rgba($white-color, 0.1);

	&__container {
		display: flex;
	}

	&__menu {
		margin-left: -30px;

		@include tablets {
			margin-bottom: 30px;
		}
	}
	
	&__left-block {
		display: inline-flex;
		flex-direction: row;
		width: 40%;
		margin-right: 131px;

		@include desktop {
			flex-direction: column;
			width: 180px;
		}
	}	
	
	&__copyright {
		font-size: 48px;
		line-height: 1;
		font-weight: 600;
		margin-right: 60px;
		white-space: nowrap; 

		@include desktop {
			margin-bottom: 15px;
		}
	}

	&__name {
		color: $white-color;
		font-weight: bold;
		font-size: 18px;
		line-height: 30px;
		text-transform: uppercase;
		margin-bottom: 18px;

		@include desktop {
			margin-bottom: 19px;
		}
	}

	&__profession {
		font-size: 18px;
		line-height: 30px;

		@include tablets {
			font-size: 14px;
			line-height: 24px;
		}
	}

	&__right-block {
		display: inline-flex;
		flex-direction: column;
	}

	&__info {
		display: flex;

		@include tablets {
			flex-direction: column;
		}
	}
	
	&__info-block {
		flex-basis: 320px;
		margin-right: 180px;

		@include desktop {
			margin-right: 42px;
		}
		@include tablets {
			margin-right: 0px;
			flex-basis: 0px;
			margin-bottom: 30px;
		}
	}
	
	&__text {
		font-size: 16px;
		line-height: 30px;
		margin-bottom: 24px;

		@include tablets {
			font-size: 14px;
			line-height: 24px;
		}
	}

	&__quote-block {
		flex-basis: 440px;
		
		@include tablets {
			font-size: 14px;
			line-height: 24px;
			flex-basis: 0px;
		}
	}

	&__quote {
		font-size: 16px;
		line-height: 30px;
		margin-bottom: 17px;
	}

	&__author {
		font-size: 16px;
		line-height: 30px;
		font-style: italic;
		color: $white-color;
				
		@include tablets {
			font-size: 14px;
			line-height: 24px;
		}
	}

	@include tablets {
		padding: 60px 0;
	}
}