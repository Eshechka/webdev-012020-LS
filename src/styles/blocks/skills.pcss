.skills {

	position: relative;
	margin-bottom: 32Px;

	&__row {

		@include tablets {
			margin-bottom: 30px;
		}
		@include phones {
			margin-bottom: 45px;
		}
	}

	&__title {
		font-weight: 800;
		line-height: 48px;
		font-size: 24px;
		margin-bottom: 25Px;

		@include tablets {
			text-align: center;	
			margin-bottom: 15Px;
		}
	}

	&__list {
		margin-left: -50px;

		@include desktop {
			margin-left: -30Px;
		}

		@include tablets {
			margin-left: -20Px;
		}
	}

	&__item {
		display: inline-flex;
		height: 150Px;
		margin-left: 50px;

		@include desktop {
			margin-left: 30Px;
		}

		@include tablets {
			height: 130Px;
			margin-left: 20Px;
		}
	}

	@include desktop {
		margin-bottom: 33Px;
	}
}