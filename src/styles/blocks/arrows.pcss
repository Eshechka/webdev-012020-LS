$arrows: .arrows;

$button-size: 50px;
$top-offset: 3px;

$icon-width: 10px;
$icon-height: 8px;


#{$arrows} {

    &__prev, &__next {  

        height: $button-size;
        width: calc($button-size - $top-offset);
        position: relative;
        padding: 0; 
        background-color: $color-dark;              
        
        &:hover {
            background-color: $base-color-hover;
        }
        
        &:focus, &:active, &:hover {
            outline: none;
        }

        &_disable {

            &:hover {
                background-color: $color-dark;
            }
            
            & #{$arrows}__icon {
                fill: $base-color;
            }
        }
    }

    &__prev {
        transform: rotate(-90deg);   
    }
    &__next {
        transform: rotate(90deg);   
    }

    &__icon {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        height: $icon-height;
        width: $icon-width;
        fill: $white-color;
    }

}    


//-----themes-----
#{$arrows}_white_circles {

    $top-offset: 0px;
    
    & #{$arrows}__prev, 
    & #{$arrows}__next {  
        width: calc($button-size - $top-offset);
        background-color: transparent;
        border-radius: 50%;
        border: 1px solid $color-dark;
    }

    & #{$arrows}__prev:hover, 
    & #{$arrows}__next:hover {
        background-color: transparent;            
        border-color: $base-color-hover;
    }

    & #{$arrows}__prev {
        transform: rotate(180deg);
        margin-right: 30px;
    }
    & #{$arrows}__next {
        transform: rotate(0deg);
    }

    & #{$arrows}__icon { 
        fill: $base-color;
    }
    
    & #{$arrows}__prev:hover #{$arrows}__icon,
    & #{$arrows}__next:hover #{$arrows}__icon {
        fill: $base-color-hover;
    }
}
