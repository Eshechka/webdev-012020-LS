.table {	
	
	&__cell {
		font-weight: 700;
		font-size: 16px;
		line-height: 30px;
		padding-top: 10px;

		&_key {		
			color: $color-light;
			padding-right: 85px;
			
			@include tablets {
				padding-right: 48px;
			}
			@include phones {
				padding-right: 63px;
			}
		}
		
		&_value {		
			color: $base-color;		
		}

		@include tablets {
			font-size: 14px;
		}
	}

}