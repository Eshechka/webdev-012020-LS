.scroll {
	display: flex;
	justify-content: center;
	cursor: pointer;
	color: $color-middle;

	&__block {
		
		display: flex;

		&:after {
			content: '';
			display: block;
			margin-left: 20px;
			height: 30px;
			width: 20px;
			background: svg-load('scroll.svg', width=100%, height=100%, fill=#{$color-middle});
			background-repeat:  no-repeat;
			
		}
	}

}