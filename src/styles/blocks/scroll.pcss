.scroll {
	display: flex;
	justify-content: center;

	position: relative;

	&__block {
		
		display: flex;
		position: absolute;
		top: -30px;

		&:after {
			content: '';
			display: block;
			margin-left: 20px;
			height: 30px;
			width: 20px;
			background: svg-load('scroll.svg', width=100%, height=100%);
			background-repeat:  no-repeat;
		}
	}

}