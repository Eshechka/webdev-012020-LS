.progress {
	position: relative;
	display: inline-flex;
	height: 100%;
	font-size: 16px;
	font-weight: 700;

	&__svg {
		height: 100%;
		transform: rotate(180deg);
	}

	&__text { 
		position: absolute;
		content: '';		
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		z-index: 15;
		text-align: center;
	}

}